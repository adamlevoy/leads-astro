---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import DynamicHeadline from "../components/DynamicHeadline";
import ClientForm from "../components/ClientForm.astro";
import WhosThisFor from "../components/WhosThisFor.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Reviews from "../components/Reviews.astro"
import FAQ from "../components/FAQ.astro"
import Footer from "../components/Footer"
import CompanyLogos from "../components/CompanyLogos.astro";

let title = "Elite Execs | Free Executive Coach Matchmaking";
let description = "Get matched with elite-level executive coaches tailored to your needs, all for free and no commitments.";
let permalink = 'https://eliteexecscoaching.com/';

const headlinePrefix = 'Free';
const headlineSuffix = 'Matchmaking';
---

<Layout {title} {description} {permalink}>
	<section class="hero">
		<Header />
		<div class="container even-columns">
			<div class="hero-content">
				<div class="hero-text-container">
					<DynamicHeadline client:only='react' prefix={headlinePrefix} suffix={headlineSuffix} />
					<p class="fs-subtitle text-neutral-100">
						Our CoachMatchâ„¢ Quiz REMOVEs THE GUESSWORK & CONNECTs YOU WITH ELITE COACHES, PERFECTLY MATCHED TO YOUR NEEDS <span class="fw-bold">- ALL FOR FREE</span>
					</p>
				</div>
				<div class="curved-arrow-wrapper">
					<p class="fs-secondary-heading fw-bold text-primary-400 uppercase">take the quiz</p>
					<img class="curved-arrow" src="/assets/curved-arrow-white.png" alt="">
				</div>
			</div>
			<div>
				<ClientForm />
			</div>
		</div>
	</section>
	<main>
		<WhosThisFor />
		<HowItWorks />
		<CompanyLogos />
		<Reviews />
		<FAQ />
	</main>
	<Footer client:visible />
</Layout>

<style>
	.hero {
		display: grid;
		grid-template-rows: max-content 1fr;
		background-image: linear-gradient(
				hsla(0, 0%, 0%, 0.5),
				hsla(0, 0%, 0%, 0.5)
			),
			url('/assets/woman-coaching-team.webp');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		padding-block: 1rem;
		min-height: 90vh;
	}

	.hero > section {
		display: flex;
		align-items: center;
	}

	.hero-container {
		margin-top: 2rem;
		column-gap: 4rem;
		row-gap: 1rem;
	}

	.hero-container > div {
		margin-inline: auto;

	}

	.hero-content {
		display: flex;
		flex-direction: column;
		justify-content: space-around;
		gap: 2rem;
		text-transform: uppercase;
		margin-block: 2rem;
	}

	.hero-text-container > p {
		margin-block: 1rem;
	}

	@media (min-width: 60em) {
		.hero-container {
			grid-template-columns: repeat(2, 1fr);
		}

		.hero-content {
			width: 100%;
		}

		.cta-container {
			flex-direction: row;
		}
	}

	.curved-arrow-wrapper {
		margin-inline: auto;
	}

	.curved-arrow-wrapper img {
		transform: scaleY(-1) rotate(-50deg);
		max-width: clamp(100px, 10vw, 200px);
		margin-top: 2rem;
		margin-inline: auto;
	}

	@media (min-width: 60em) {
		.curved-arrow-wrapper {
			position: relative;
			transform: none;
			margin-left: auto;
			margin-right: 0;
		}

		.curved-arrow-wrapper p {
			position: absolute;
			top: -40px;
			left: -200px;
		}

		.curved-arrow-wrapper img {
			transform: none;
			margin: 0;
		}
	}
</style>
