---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import WhosThisFor from "../components/WhosThisFor.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Reviews from "../components/Reviews.astro"
import FAQ from "../components/FAQ.astro"
import Footer from "../components/Footer.astro"
import RadioCTA from '../components/RadioCTA'
import CompanyLogos from "../components/CompanyLogos.astro";

let title = "Elite Execs | Free Executive Coach Matchmaking";
let description = "Get matched with elite-level executive coaches tailored to your needs, all for free and no commitments.";
let permalink = 'https://eliteexecscoaching.com/';
---

<Layout {title} {description} {permalink}>
	<body>
		<section class="hero">
			<Header />
			<div class="container">
				<div class="even-columns">
					<div class="hero-content">
						<div class="hero-text-container">
							<h1 class="fs-primary-heading fw-bold text-neutral-100 uppercase">
								Free <br /><span class="text-primary-400">Executive Coach</span><br>
								Matchmaking
							</h1>
							<p class="fs-subtitle text-neutral-100">
							WE REMOVE THE GUESSWORK & CONNECT YOU WITH ELITE COACHES, PERFECTLY MATCHED TO YOUR NEEDS<span class="fw-bold"> - ALL FOR FREE, NO COMMITMENTS</span>
							</p>
						</div>
						<RadioCTA client:load />
					</div>
					<div></div>
				</div>
			</div>
		</section>
		<main>
			<WhosThisFor />
			<HowItWorks />
			<CompanyLogos />
			<Reviews />
			<FAQ />
		</main>
		<Footer />		
	</body>
</Layout>

<style>
	.hero {
		display: grid;
		grid-template-rows: max-content 1fr;
		background-image: linear-gradient(
				hsla(0, 0%, 0%, 0.5),
				hsla(0, 0%, 0%, 0.5)
			),
			url('/assets/woman-coaching-team-mobile.webp');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		padding-block: 1rem;
		min-height: 95vh;
	}

	.hero > section {
		display: flex;
		align-items: center;
	}

	.hero-container {
		margin-top: 2rem;
		column-gap: 4rem;
		row-gap: 1rem;
	}

	.hero-container > div {
		margin-inline: auto;

	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		text-transform: uppercase;
		/* max-width: 500px; */
		margin-block: 2rem;
	}

	.hero-text-container > p {
		margin-block: 1rem;
	}

	@media (min-width: 60em) {
		.hero {
			background-image: linear-gradient(
					hsla(0, 0%, 0%, 0.5),
					hsla(0, 0%, 0%, 0.5)
				),
				url('/assets/woman-coaching-team.webp');
			height: 90vh;
		}

		.hero-container {
			grid-template-columns: repeat(2, 1fr);
		}

		.hero-content {
			width: 100%;
		}
	}
</style>
