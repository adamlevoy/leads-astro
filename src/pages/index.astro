---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import WhosThisFor from "../components/WhosThisFor.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Reviews from "../components/Reviews.astro"
import FAQ from "../components/FAQ.astro"
import Footer from "../components/Footer.astro"

let title = "Elite Execs | Connect with elite-level executive coaches for free";
let description = "Connect for free with elite-level executive coaches perfectly matched to your needs.";
let permalink = 'https://leads.adamlevoy.com/';
---

<Layout {title} {description} {permalink}>
	<body>
		<section class="hero">
			<header>
				<div class="container">
					<nav>
						<Logo />
					</nav>
				</div>
			</header>
			<div class="container">
				<div class="even-columns">
					<div class="hero-content">
						<div class="hero-text-container">
							<h1 class="fs-primary-heading fw-bold text-neutral-100 uppercase">
								Free <br /><span class="text-primary-400">Executive Coach</span><br>
								Matchmaking
							</h1>
							<p class="fs-subtitle text-neutral-100">
							WE REMOVE THE GUESSWORK & CONNECT YOU WITH ELITE COACHES, PERFECTLY MATCHED TO YOUR NEEDS<span class="fw-bold"> - ALL FOR FREE</span>
							</p>
						</div>
						<div class='hero-cta shadow-xl-light'>
							<p class='fs-subtitle fw-bold text-neutral-100'>I'm seeking coaching for:</p>
							<a href="/quiz?coachingfor=Myself" class="radio-button"><span>◯</span> Myself</a>							
							<a href="/quiz?coachingfor=My+company" class="radio-button"><span>◯</span> My company</a>							
						</div>
					</div>
					<div></div>
				</div>
			</div>
		</section>
		<main>
			<WhosThisFor />
			<HowItWorks />
			<Reviews />
			<FAQ />
		</main>
		<Footer />		
	</body>
</Layout>

<style>
	.hero {
		display: grid;
		grid-template-rows: max-content 1fr;
		background-image: linear-gradient(
				hsla(0, 0%, 0%, 0.5),
				hsla(0, 0%, 0%, 0.5)
			),
			url('/assets/woman-coaching-team-mobile.webp');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		padding-block: 1rem;
		min-height: 90vh;
	}

	.hero > section {
		display: flex;
		align-items: center;
	}

	.hero-container {
		margin-top: 2rem;
		column-gap: 4rem;
		row-gap: 1rem;
	}

	.hero-container > div {
		margin-inline: auto;

	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		text-transform: uppercase;
		/* max-width: 500px; */
		margin-block: 2rem;
	}

	.hero-text-container > p {
		margin-block: 1rem;
	}

	.hero-cta {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 1.25rem;
		max-width: 450px;
		padding: 1rem;
		padding-bottom: 1.75rem;
		/* border: 5px solid var(--clr-primary-400); */
		border-radius: var(--size-400);
		background-color: hsla(196, 100%, 47%, .80);
		text-align: center;
	}

	@media (min-width: 60em) {
		.hero {
			background-image: linear-gradient(
					hsla(0, 0%, 0%, 0.5),
					hsla(0, 0%, 0%, 0.5)
				),
				url('/assets/woman-coaching-team.webp');
			height: 90vh;
		}

		.hero-container {
			grid-template-columns: repeat(2, 1fr);
		}

		.hero-content {
			width: 100%;
		}

		.cta-container {
			flex-direction: row;
		}
	}

	.radio-button {
		display: flex;
		align-items: center;
		width: 100%;
		text-align: left;
		text-decoration: none;
		margin-inline: auto;
		background-color: var(--clr-primary-600);
		border: 2px solid var(--clr-neutral-100);
		border-radius: 100vmax;
		padding-block: 0.5rem;
		padding-inline: 1.5rem;
		color: var(--clr-neutral-100);
		cursor: pointer;
	}

	@media (min-width: 60em) {
		.radio-button {
			max-width: 400px;
		}
	}

	.radio-button > span {
		font-size: var(--fs-500);
		margin-right: 1rem;
	}
</style>
